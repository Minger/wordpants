<h1>Your games</h1>

<% if @games.length > 0 -%>
<table>
  <tr>
    <th>Name</th>
    <th>Status</th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%=h game.name %></td>
    <td><%=h game.status %></td>
    <td><%= link_to 'Play', game %></td>
  </tr>
<% end %>
</table>

<br />
<% else -%>
<p>
  You don't have any games.
</p>
<% end -%>
<%= link_to 'New game', new_game_path %>
